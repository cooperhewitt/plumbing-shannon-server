#!/bin/sh -e

# Starts, stops, and restarts the event server
# http://werxltd.com/wp/2012/01/05/simple-init-d-script-template/

# To make sure this runs at startup, do:
# update-rc.d shannon-server.sh defaults

# Adjust to taste

SHANNON_ROOT='/usr/local/plumbing-shannon-server/flask/'
SHANNON_USER='www-data'
SHANNON_HOST='127.0.0.1'
SHANNON_PORT=5000

GUNICORN=`which gunicorn`
GUNICORN_OPTS="-u ${SHANNON_USER} -w 4 -b ${SHANNON_HOST}:${SHANNON_PORT} -k egg:gunicorn#gevent --chdir ${SHANNON_ROOT}"

PIDFILE=/var/run/shannon-server.pid

case $1 in
    debug)
        echo "Starting shannon server (in debug mode)"
	echo sudo $GUNICORN $GUNICORN_OPTS server:app
	sudo $GUNICORN $GUNICORN_OPTS server:app

        ;;
    start)
        echo "Starting shannon server"

	PID=`exec sudo -u www-data $GUNICORN $GUNICORN_OPTS server:app > /dev/null 2>&1 & echo $!`

        if [ -z $PID ]; then
            printf "%s\n" "Fail"
        else
            echo $PID > $PIDFILE
            printf "%s\n" "Ok"
	    echo $PID
        fi

        ;;
    stop)
        echo "Stopping shannon server"

	printf "%-50s" "Stopping $NAME"
            PID=`cat $PIDFILE`
            cd $DAEMON_PATH
        if [ -f $PIDFILE ]; then
            kill -HUP $PID
            printf "%s\n" "Ok"
            rm -f $PIDFILE
        else
            printf "%s\n" "pidfile not found"
        fi

        ;;
    restart)
        $0 stop
        $0 start
        ;;
    status)
        printf "%-50s" "Checking shannon-server..."
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                printf "%s\n" "Process dead but pidfile exists"
            else
                echo "Running"
            fi
        else
            printf "%s\n" "Service not running"
        fi
	;;
    *)
        echo "Usage: $0 {debug|start|stop|restart|status}" >&2
        exit 1
        ;;
esac
